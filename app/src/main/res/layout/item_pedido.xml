<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/idPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="id Posts:  "
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="3dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/titlePosts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:text="title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:visibility="visible"
                        android:id="@+id/userIdPosts"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/textv_conf_border"
                        android:layout_marginStart="3dp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text=" user Id  "/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:layout_marginEnd="10dp"
                        android:id="@+id/favoriteProduct"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/toggle_selector"
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp" />


                    <ImageButton
                        android:layout_marginStart="10dp"
                        android:id="@+id/detailsPosts"
                        android:src="@drawable/ic_assistant_black_24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>